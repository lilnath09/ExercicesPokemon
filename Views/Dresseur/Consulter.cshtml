@model ExercicePokemon.Models.Dresseur

@{
    Layout = "_Layout";
}


<div>
    <h1>Dresseur : @Model.Nom</h1>
    <hr />
    <div class="row">
        <div class="col-sm-12 ">
            <img src="@Model.Image" style="max-width:200px;" class="mb-3" />
        </div>
        <div class="col-sm-2">
            Arèna
        </div>
        <div class="col-sm-10">
            @Model.Arena
        </div>
        <div class="col-sm-2">
            Spécialité
        </div>
        <div class="col-sm-10">
            @Model.TypeSpecialisé
        </div>
    </div>

    <h3 class="mt-5">Liste de ses pokémons</h3>
    <br />
    <br />
    <div class="row">
        @foreach (var pokemonDresseur in Model.PokemonsDresseur)
        {
        <div class="col">
            <a href="~/pokemon/consulter/@pokemonDresseur.Pokemon.Id">
                <div class="pokemon">
                    <img src="/images/pokemon/@(pokemonDresseur.Pokemon.Id).png" alt="Image du pokémon" /><br />
                    @(pokemonDresseur.Pokemon.Nom) <br />
                    Niveau @(pokemonDresseur.Pokemon.Total)
                </div>
            </a>
        </div>
        }
    </div>

    <div class="row">
        <div class="col-sm-12 mt-5">
            <a href="/dresseur/lister" class="btn btn-primary">Retour à la liste</a>
        </div>
    </div>
</div>